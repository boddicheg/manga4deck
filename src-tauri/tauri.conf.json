{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "manga4deck",
  "version": "0.4.1",
  "identifier": "com.manga4deck.app",
  "build": {
    "beforeDevCommand": "npm run prepare-backend && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run prepare-backend && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Manga4Deck",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "backend/dist/app.exe"
    ]
  }
}
